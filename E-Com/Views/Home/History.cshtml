@{
}



<section class="AddMarg">
    <h2 style="margin:10px"> History of your purchase </h2>


    <table class="table">
        <thead>
            <tr>
                <td class="text-center" style="color:white">
                    Product Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Date
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                if (ViewBag.history != null)
                {
                    foreach (var item in ViewBag.history)
                    {
                            <tr>
                                <td class="text-center">
                                    @item.ProductName
                                </td>

                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.DateDone
                                </td>
                            </tr>
                    }
                }
                }
            </tbody>
        </table>
    </section>